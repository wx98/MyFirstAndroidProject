<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativelayoutActivity">
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1581c8ff"
        >
        <View
            android:id="@+id/r1_v1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/color_black"/>
        <View
            android:id="@+id/r1_v2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/color_blue"
            android:layout_toRightOf="@id/r1_v1"/>
        <View
            android:id="@+id/r1_v3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/color_red"
            android:layout_below="@id/r1_v1" />
        <LinearLayout
            android:id="@+id/r1_l1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/r1_v3"
            android:background="@color/color_blue"
            android:orientation="horizontal"
            android:padding="10dp">
            <View
                android:id="@+id/r1_l1_v1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/color_purple"/>
            <RelativeLayout
                android:id="@+id/r1_l1_r1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_black"
                android:padding="15dp">
                <View
                    android:id="@+id/r1_l1_r1_v1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_green"
                    android:layout_marginRight="10dp"/>
                <View
                    android:id="@+id/r1_l1_r1_v2"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_yellow"
                    android:layout_toRightOf="@id/r1_l1_r1_v1"
                    android:layout_marginLeft="0dp"/>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>