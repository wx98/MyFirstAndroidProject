<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TextviewActivity">
    <TextView
    android:id="@+id/tv_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="一行测试文本"
    android:textColor="@color/color_black"
    android:textSize="24sp"
    android:layout_margin="10dp"
    />
    <TextView
        android:id="@+id/tv_2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="一行测试文本"
        android:ellipsize="end"
        android:textColor="@color/color_black"
        android:textSize="24sp"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一行测试文本加图片"
        android:textColor="@color/color_black"
        android:background="#82acdcda"
        android:textSize="24sp"
        android:layout_margin="10dp"
        android:drawableRight="@drawable/ic_launcher"
        android:drawablePadding="20dp"
        />
        <TextView
            android:id="@+id/tv_4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="一行测试文本"
            android:textColor="@color/color_black"
            android:textSize="24sp"
            android:layout_margin="10dp"
            />
        <TextView
        android:id="@+id/tv_5"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="一行测试文本"
        android:textColor="@color/color_black"
        android:textSize="24sp"
        android:layout_margin="10dp"
        />
        <TextView
            android:id="@+id/tv_6"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_black"
            android:textSize="24sp"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/tv_7"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="一行测试文本1一行测试文本2一行测试文本3一行测试文本4一行测试文本5一行测试文本6一行测试文本7一行测试文本8一行测试文本9一行测试文本10一行测试文本11一行测试文本12一行测试文本13一行测试文本14一行测试文本15一行测试文本16一行测试文本"
            android:textColor="@color/color_black"
            android:textSize="24sp"
            android:layout_margin="10dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
        />


</LinearLayout>